@model RegisterViewModel
@{
	ViewData["Tittle"]="Kayıt Ol";
}

<div class="row">
	<div class ="col-4 offset-4">
		<hi class="display-4 border-bottom text-center ">@ViewData["Tittle"]</hi>
	</div>
</div>

<div class="row">
	<div class ="col-4 offset-4 pt-2">
		<form method="post">
			<div asp-validation-summary=ModelOnly class="text-danger small"></div>

			<div class="form-group mb-3">
				<label asp-for="StudentName" class="form-label">Kullanıcı Adınız</label>
				<input asp-for="StudentName" class="form-control" placeholder="Kullanıcı adı belirleyiniz" />
				<span asp-validation-for="StudentName" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Password" class="form-label">Şifre</label>
				<input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi Giriniz"/>
				<span asp-validation-for="Password" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="RePassword" class="form-label">Şifre Kontrol</label>
				<input asp-for="RePassword" type="password" class="form-control" placeholder="Şifrenizi Tekrardan Giriniz" />
				<span asp-validation-for="RePassword" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3 d-grid">
				<button type="submit" class="btn btn-primary d-block "><i class="fa-solid fa-arrow-right-to-bracket"></i>Kayıt Ol</button>
			</div>
		</form>
	</div>
</div>